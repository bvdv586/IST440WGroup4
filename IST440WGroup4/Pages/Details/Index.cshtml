@page
@model IST440WGroup4.Pages.Details.IndexModel
@{
}


<div class="container text-center">
    <div class="row">
        <div class="col">
            <h2>MEWS Score:</h2>
            <h3 style="color:forestgreen">2</h3>
            <p>Patient is healthy</p>
            <p>Check condition again in 24 Hours.</p>
        </div>

        <div class="col">
            <h2>Patient Information</h2>
            <p><b>Patient Name:</b> @Model.listPatients[2 + 3]</p>
            <p><b>Location</b>: @Model.listPatients[7] </p>
            <p><b>Room:</b> @Model.listPatients[13] </p>
            <p><b>Admitted:</b> @Model.listPatients[5]</p>
            <p><b>Birth:</b> @Model.listPatients[4]</p>
            <p><b>Patient Diagnosis:</b> @Model.listPatients[9]</p>
        </div>
    </div>
</div>

<br />

<caption>Latest Patient Vital Information</caption>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Vitals</th>
            <th scope="col">Vital Information</th>
            <th scope="col">MEWS Score</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">Respiory RPM</th>
            <td>@Model.listPatients[14] + rpm</td>
            <td>0</td>
        </tr>
        <tr>
            <th scope="row">Heart Rate</th>
            <td>@Model.listPatients[15] + bpm</td>
            <td>0</td>
        </tr>
        <tr>
            <th scope="row">Systolic Blood Pressure</th>
            <td>@Model.listPatients[16] + mmHG</td>
            <td>0</td>
        </tr>
        <tr>
            <th scope="row">Conscuious Level</th>
            <td>@Model.listPatients[17]</td>
            <td>0</td>
        </tr>
        <tr>
            <th scope="row">Temperature</th>
            <td>@Model.listPatients[18] &deg;F </td>
            <td>0</td>
        </tr>
    </tbody>
</table>